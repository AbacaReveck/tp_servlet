<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>


<web-app>

	<servlet>
		<servlet-name>HelloWorld</servlet-name>
		<servlet-class>ServletCode.HelloWorld</servlet-class>

		<init-param>
			<param-name>defaultName</param-name>
			<param-value>Rim</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>SetDefaultName</servlet-name>
		<servlet-class>ServletCode.SetDefaultName</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>HelloWorld</servlet-name>
		<url-pattern>/helloworld</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SetDefaultName</servlet-name>
		<url-pattern>/setdefaultname</url-pattern>
	</servlet-mapping>

</web-app>
